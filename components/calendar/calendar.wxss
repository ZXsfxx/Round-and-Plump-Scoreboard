.calendar {
  padding: 20rpx;
  background: #fff;
  border-radius: 20rpx;
}

.calendar-header {
  margin-bottom: 20rpx;
}

.month-switcher {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
}

.switch-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #f5f5f5;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.switch-btn:active {
  background: #e0e0e0;
  transform: scale(0.95);
}

.arrow {
  font-size: 24rpx;
  color: #333;
}

.calendar-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.calendar-subtitle {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  margin-bottom: 40rpx;
}

.calendar-container {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

.month-block {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.month-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.weekdays {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 10rpx;
  margin-bottom: 10rpx;
}

.weekday {
  text-align: center;
  font-size: 24rpx;
  color: #666;
}

.days {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 10rpx;
}

.day-cell {
  aspect-ratio: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #333;
  background: #f5f5f5;
  border-radius: 8rpx;
  position: relative;
  transition: all 0.3s ease;
}

.day-cell.empty {
  background: transparent;
}

.day-cell.no-score {
  opacity: 0.5;
  background: #eee;
  cursor: not-allowed;
}

.day-cell.has-score {
  cursor: pointer;
  color: #fff;
}

.day-cell.has-score:hover {
  transform: scale(1.05);
}

.day-cell text {
  position: relative;
  z-index: 1;
} 